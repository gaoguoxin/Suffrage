  <%= content_for :app_head do %>
    <script type='text/javascript'>
      $('#blog_image').fileinput({'showUpload':false})
    </script>
  <% end %>
<div class="container-fluid votes">
  <div class="row">
    <div class="col-xs-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="/doctors">投票信息统计</a></li>
      </ul>
    </div>
    <div class="col-xs-10 main blogs">
      <%= form_for(@doctor,:html => {:enctype => "multipart/form-data"}) do |f| %>
        <div class="form-group ">
          <%= image_tag(@doctor.avatar_url) if @doctor.avatar? %>
          <br>
          <label class="control-label" >头像<span class="text-danger">*</span></label>  
          <%= f.file_field :avatar,:class => 'form-control image-ipt' %>
        </div>
        <div class="form-group ">
          <label class="control-label" >姓名<span class="text-danger">*</span></label>
          <%= f.text_field :name,:class => 'form-control' %>
        </div>
        <div class="form-group ">
          <label class="control-label" >医院<span class="text-danger">*</span></label>
          <%= f.text_field :hospital,:class => 'form-control' %>
        </div>
        <div class="form-group ">
          <label class="control-label" >科室<span class="text-danger">*</span></label>
          <%= f.text_field :office,:class => 'form-control' %>
        </div>
        <div class="form-group ">
          <label class="control-label" >病例名称<span class="text-danger">*</span></label>
          <%= f.text_field :position,:class => 'form-control' %>
        </div>
        <div class="form-group ">
          <label class="control-label" >票数<span class="text-danger">*</span></label>
          <%= f.text_field :point,:class => 'form-control' %>
        </div>    
        <div class="form-group ">
          <label class="control-label" >标题<span class="text-danger">*</span></label>
          <%= f.text_field :title,:class => 'form-control' %>
        </div>                                           
        <div class="form-group  ">
          <label class="control-label" >参评论文<span class="text-danger">*</span></label>
          <%= cktext_area :doctor, :content, :cols => 40, :ckeditor => {:uiColor => '##428bca', :toolbar => 'mini'} %>
        </div>  
        <div class="form-group">
          <button type="submit" class="btn btn-info pull-right submit">确定</button>
        </div> 
      <% end %>
    </div>
  </div>
</div>