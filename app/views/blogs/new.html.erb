    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active"><a href="/blogs">资讯列表</a></li>
          </ul>
        </div>
        <div class="col-xs-10 main blogs">
          <%= form_for(@blog,:html => {:enctype => "multipart/form-data"}) do |f| %>
            <div class="form-group ">
              <%= image_tag(@blog.image_url) if @blog.image? %>
              <br>
              <label class="control-label" >图片<span class="text-danger">*</span></label>  
              <%= f.file_field :image,:class => 'form-control image-ipt' %>
            </div> 
            <div class="form-group ">
              <label class="control-label" >标题<span class="text-danger">*</span></label>
              <%= f.text_field :name,:class => 'form-control' %>
              <%= f.hidden_field :type,:class => 'form-control' %>
            </div>
            <div class="form-group ">
              <label class="control-label" >来源<span class="text-danger">*</span></label>
              <%= f.text_field :source,:class => 'form-control' %>
            </div>                
            <div class="form-group">
              <label class="control-label" >类型<span class="text-danger">*</span></label>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="current-role"><%= @blog.show_type || "热点资讯" %></span><span class="caret"></span></button>
                <ul class="dropdown-menu blog-type" role="menu">
                  <li><a href="#" data-role='1'>热点资讯</a></li>
                  <li><a href="#" data-role='2'>比赛预告</a></li>
                  <li><a href="#" data-role='3'>精彩回顾</a></li>
                </ul>
              </div>
            </div>             
            <div class="form-group  ">
              <label class="control-label" >内容<span class="text-danger">*</span></label>
              <%= cktext_area :blog, :content, :cols => 40, :ckeditor => {:uiColor => '##428bca', :toolbar => 'mini'} %>
            </div>  
            <div class="form-group">
              <button type="submit" class="btn btn-info pull-right submit">确定</button>
            </div> 
          <% end %>
        </div>
      </div>
    </div>